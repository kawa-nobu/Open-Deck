{
  "name": "Open-Deck(ProtoType)",
  "version": "1.1.0",
  "manifest_version": 3,
  "description": "The OpenSource Deck",
  "icons" : {
    "128" : "icon.png"
  },
  "host_permissions": [
    "*://twitter.com/*",
    "*://*.twimg.com/*",
    "*://*.bsky.app/*",
    "*://*.misskey.io/*",
    "*://*.statsigapi.net/*",
    "*://*.cloudflareinsights.com/",
    "*://*.misskeyusercontent.com/"
  ],
  "permissions" : ["storage","webRequest","declarativeNetRequest", "cookies"],
  "background" : {"service_worker" : "background.js"},
  "content_scripts": [{
    "matches": ["https://*.twitter.com/*", "*://*.misskey.io/*", "*://*.bsky.app/*"],
    "js": ["content.js"],
    "all_frames": true
  }],
  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "ruleset_1",
      "enabled": false,
      "path": "rules.json"
    }]
  },
  "web_accessible_resources" : [{
    "matches" : ["https://*.twitter.com/*"],
    "resources" : ["icon.png", 
    "icon/logo_icon.svg",
    "profile_debug.html",
    "about_opd.html",
    "icon/settings.svg",
    "icon/banner_hide.svg", 
    "icon/top_hide.svg", 
    "icon/pin.svg", 
    "icon/pinned.svg", 
    "icon/column_move.svg",
    "icon/column_close.svg",
    "icon/column_w_size.svg", 
    "icon/column_add_1st.svg", 
    "icon/column_add_2nd.svg", 
    "icon/tl_column.svg", 
    "icon/notice_column.svg", 
    "icon/exp_column.svg", 
    "icon/single_view.svg", 
    "icon/second_view.svg", 
    "icon/profile_save.svg", 
    "icon/profile_delete.svg"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
  }